{
    "name": "@oaf/event",
    "version": "0.6.0",
    "description": "OWS of OAF events",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/OAF-event.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/OAF-event/issues"
    },
    "dependencies": {
        "boot-cell": "^2.0.0-rc.19",
        "browser-unhandled-rejection": "^1.0.2",
        "classnames": "^2.5.1",
        "dom-renderer": "^2.6.2",
        "iterable-observer": "^1.1.0",
        "web-cell": "^3.2.2",
        "web-utility": "^4.6.3"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.38.0",
        "@parcel/packager-raw-url": "~2.16.0",
        "@parcel/transformer-less": "~2.16.0",
        "@parcel/transformer-webmanifest": "~2.16.0",
        "@softonus/prettier-plugin-duplicate-remover": "^1.1.2",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^22.18.12",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.6",
        "parcel": "~2.16.0",
        "postcss": "^8.5.6",
        "postcss-modules": "^6.0.1",
        "prettier": "^3.6.2",
        "prettier-plugin-css-order": "^2.1.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.2",
        "workbox-cli": "^7.3.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@parcel/watcher",
            "@swc/core",
            "lmdb",
            "msgpackr-extract"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4,
        "plugins": [
            "prettier-plugin-css-order",
            "@softonus/prettier-plugin-duplicate-remover"
        ]
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,mjs,ts,tsx}": "prettier --write",
        "*.{js,mjs,ts,tsx}": "eslint --fix"
    },
    "scripts": {
        "prepare": "husky",
        "test": "lint-staged  &&  tsc --noEmit",
        "clean": "rm -rf .parcel-cache/ dist/",
        "start": "npm run clean  &&  parcel src/index.html",
        "pack": "npm run clean  &&  parcel build src/index.html --public-url .",
        "build": "npm run pack  &&  workbox generateSW"
    }
}
